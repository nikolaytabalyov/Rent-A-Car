@model IEnumerable<RentACar.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/h1.css" />

<style>
    a {
        color: white;
        text-decoration: none
    }
    #heading-box {
        display: flex;
        justify-content: space-between;
        align-items: end;
    }
    #heading-box button {
        float: right;
        height: 4em
    }
</style>

<div id="heading-box">
    <h1>Reservations</h1>
    <button type="button" class="btn btn-dark btn-sm">
        <a class="active" asp-action="Create">Create</a>
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Car Id</th>
            <th>User Id</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Is Approved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.CarId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td>
                <td>
                    <a class="active" asp-action="Details" asp-route-id="@item.Id">Details |</a>
                    <a class="active" asp-action="Edit" asp-route-id="@item.Id">Edit |</a>
                    <a class="active" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
